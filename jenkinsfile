/* groovylint-disable DuplicateStringLiteral */
pipeline {
    agent any
    tools {
        maven 'maven3'
    }
    
    stages {
        stage('Build') {
            steps {
                sh script: 'mvn clean package'
            }
        }
        stage('Upload War To Nexus') {
            steps {
                script {
                    def mavenPom = readMavenPom file: 'pom.xml'
                    def nexusRepoName = mavenPom.version.endsWith("SNAPSHOT") ? "V3LogsManagement-snapshot" : "V3LogsManagement-release"

                    nexusArtifactUploader artifacts: [
                        [
                            artifactId: 'v3-vmetrix-vlogsmanagement-back',
                            classifier: '',
                            file: "target/V3LogsManagement-Back${mavenPom.version}.war",
                            type: 'war'
                        ]
                    ],
                    credentialsId: 'nexus3',
                    groupId: 'com.vmetrix.v3.vlogsmanagement',
                    nexusUrl: 'http://maven.vmetrix.com:8081',
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    repository: nexusRepoName,
                    version: "${mavenPom.version}"
                }
            }
        }
    }
}